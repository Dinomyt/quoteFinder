<%- include("partials/header.ejs") %>

<div class="container mt-4">
  <h1 class="mb-4">Quote Finder</h1>

  <div class="row">
    <!-- Keyword Search -->
    <div class="col-md-6">
      <form action="/searchByKeyword" method="GET" class="needs-validation mb-4" novalidate>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="Search by keyword…"
            required
          >
          <button class="btn btn-outline-secondary" type="submit">Go</button>
          <div class="invalid-feedback">
            Please enter a keyword.
          </div>
        </div>
      </form>
    </div>

    <!-- Category Search -->
    <div class="col-md-6">
      <form action="/searchByCategory" method="GET" class="needs-validation mb-4" novalidate>
        <div class="mb-3">
          <label for="category" class="form-label">Search by Category</label>
          <select
            id="category"
            name="category"
            class="form-select"
            required
          >
            <option value="" disabled selected>Choose a category…</option>
            <% categories.forEach(function(cat) { %>
              <option value="<%= cat %>"><%= cat %></option>
            <% }); %>
          </select>
          <div class="invalid-feedback">
            Please select a category.
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Go</button>
      </form>
    </div>
  </div>

  <!-- Author Search -->
  <form action="/searchByAuthor" method="GET" class="needs-validation mb-4" novalidate>
    <div class="mb-3">
      <label for="authorId" class="form-label">Search by Author</label>
      <select
        id="authorId"
        name="authorId"
        class="form-select"
        required
      >
        <option value="" disabled selected>Choose an author…</option>
        <% authors.forEach(function(author) { %>
          <option value="<%= author.authorId %>">
            <%= author.firstName %> <%= author.lastName %>
          </option>
        <% }); %>
      </select>
      <div class="invalid-feedback">
        Please select an author.
      </div>
    </div>
    <button class="btn btn-primary" type="submit">Go</button>
  </form>

  <!-- Likes Search -->
  <form action="/searchByLikes" method="GET" class="needs-validation mb-4" novalidate>
    <div class="row">
      <div class="col">
        <label for="minLikes" class="form-label">Min Likes</label>
        <input
          type="number"
          id="minLikes"
          name="minLikes"
          class="form-control"
          min="0"
          required
        >
        <div class="invalid-feedback">
          Enter a minimum number of likes.
        </div>
      </div>
      <div class="col">
        <label for="maxLikes" class="form-label">Max Likes</label>
        <input
          type="number"
          id="maxLikes"
          name="maxLikes"
          class="form-control"
          min="0"
          required
        >
        <div class="invalid-feedback">
          Enter a maximum number of likes.
        </div>
      </div>
    </div>
    <button class="btn btn-primary mt-3" type="submit">Go</button>
  </form>

  <!-- Add Quote Modal Trigger -->
  <button
    class="btn btn-success"
    data-bs-toggle="modal"
    data-bs-target="#addQuoteModal"
  >
    Add New Quote
  </button>

  <!-- Include the Add Quote Modal partial -->
  <%- include("partials/addQuoteModal.ejs") %>
</div>

<%- include("partials/footer.ejs") %>
