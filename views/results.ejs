<%- include("partials/header.ejs") %>

<h1 class="my-4">
  <% if (author) { %>
    Quotes by <%= author.firstName %> <%= author.lastName %>
  <% } else { %>
    Search Results
  <% } %>
</h1>

<% if (authorId) { %>
  <button
    class="btn btn-danger mb-3"
    onclick="deleteAuthor(<%= authorId %>)"
  >
    Delete Author
  </button>
<% } %>

<% if (quotes.length > 0) { %>
  <% quotes.forEach(q => { %>
    <div class="card mb-3">
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>"<%= q.quote %>"</p>
          <footer class="blockquote-footer">
            <a href="#" class="author-link" id="<%= q.authorId %>">
              <%= q.firstName %> <%= q.lastName %>
            </a>
          </footer>
        </blockquote>
        <div class="mt-3">
          <button class="btn btn-sm btn-warning" onclick="editQuote(<%= q.quoteId %>)">
            Edit
          </button>
          <button class="btn btn-sm btn-danger" onclick="deleteQuote(<%= q.quoteId %>)">
            Delete
          </button>
        </div>
      </div>
    </div>
  <% }) %>
<% } else { %>
  <div class="alert alert-warning">
    No quotes found. <a href="/" class="alert-link">Back to search</a>.
  </div>
<% } %>

<a href="/" class="btn btn-secondary mt-3">Back to Search</a>

<!-- Edit Quote Modal -->
<div class="modal fade" id="editQuoteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body"><!-- injected by scripts.js --></div>
    </div>
  </div>
</div>

<!-- Author Info Modal -->
<div class="modal fade" id="authorModal" tabindex="-1" aria-labelledby="authorModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="authorModalLabel">Author Information</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="authorInfo"><!-- injected --></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
