<%- include("partials/header.ejs") %>

<h1>Search Results</h1>

<% if (quotes.length > 0) { %>
  <% quotes.forEach(function(q){ %>
    <div class="card my-3">
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>"<%= q.quote %>"</p>
          <footer class="blockquote-footer">
            <a href="#" class="author-link" id="<%= q.authorId %>"><%= q.firstName %> <%= q.lastName %></a>
          </footer>
        </blockquote>
      </div>
    </div>
  <% }) %>
<% } else { %>
  <div class="alert alert-warning" role="alert">
    No quotes found matching your criteria. <a href="/" class="alert-link">Try another search</a>.
  </div>
<% } %>

<a href="/" class="btn btn-secondary mt-3">Back to Search</a>

<div class="modal fade" id="authorModal" tabindex="-1" aria-labelledby="authorModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="authorModalLabel">Author Information</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="authorInfo">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>